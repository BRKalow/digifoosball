<!doctype html>
<html lang="en" ng-app="DigiFoosball" ng-controller="MainCtrl">
<head>
	<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

	<title ng-bind-template="Digi Foosball :: {{title}}">Digi Foosball</title>

  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="css/dashboard/dashboard.css">
  <link rel="stylesheet" type="text/css" href="css/themes/blue.css">

  <script type="text/javascript" src="app/bower_components/angular/angular.min.js"></script>
  <script type="text/javascript" src="js/angular-cookies.js"></script>
  <script type="text/javascript" src="js/ng-bootstrap-tpls.min.js"></script>
  <script type="text/javascript" src="app/bower_components/angular-route/angular-route.min.js"></script>
  <script type="text/javascript" src="app/bower_components/angular-resource/angular-resource.min.js"></script>
  <script type="text/javascript" src="app/app.js"></script>
  <script type="text/javascript" src="app/services.js"></script>
  <script type="text/javascript" src="app/directives.js"></script>
  <script type="text/javascript" src="app/controllers.js"></script>
</head>
<body>
  <div id="page-wrapper" ng-class="{'active': toggle, 'open-modal': hasModalOpen}" ng-cloak>

    <!-- Sidebar -->

    <div id="sidebar-wrapper">
      <ul class="sidebar">
        <li class="sidebar-main">
          <a href="#" ng-click="toggleSidebar()">
            <img src="http://www.digi.com/images/logo-digi-white.png" alt="Digi" style="max-height:45px;"/>
            &nbsp;&nbsp;Foosball
            <span class="menu-icon glyphicon glyphicon-transfer"></span>
          </a>
        </li>
        <li class="sidebar-title"><span>NAVIGATION</span></li>
        <li class="sidebar-list">
          <a href="/">Dashboard <span class="menu-icon fa fa-tachometer"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="/games">Game History <span class="menu-icon fa fa-trophy"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="/players">Player List <span class="menu-icon fa fa-users"></span></a>
        </li>
      </ul>
      <div class="sidebar-footer">
        <div class="col-xs-12">
          <a href="https://github.com/BRKalow/digifoosball" target="_blank">
            Github
          </a>
        </div>
      </div>
    </div>

    <!-- End Sidebar -->

    <div id="content-wrapper">
      <div class="page-content">

        <!-- Header Bar -->

        <div class="row header">
          <div class="col-xs-12">
            <div class="meta pull-left">
              <div class="page">
                Digi Foosball 
              </div>
              <div class="breadcrumb-links">
                {{ title }}
              </div>
            </div>
            <div class="buttons pull-right">
              <button class="btn btn-sm btn-info" ng-click="newGameModal()">Start game</button>
              <button class="btn btn-sm btn-info" ng-click="newPlayerModal()">Create player</button>
            </div>
          </div>
        </div>

        <!-- End Header Bar -->

        <!-- Main Content -->
        
          <div class="row" ng-if="msg">
            <div class="col-lg-12">
             The score is {{ msg.score_home }} to {{ msg.score_away }} 
            </div>
          </div>
          <div ng-view></div>

        <!-- End Main Content -->

      </div><!-- End Page Content -->
    </div><!-- End Content Wrapper -->
  </div><!-- End Page Wrapper -->
</body>
</html>
